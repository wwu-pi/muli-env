package applications.muliST;

import java.util.List;
import de.wwu.muli.*;
import de.wwu.muli.solution.*;

public class ComplicatedCoinsIDD {

    public static void main(String[] args) {
        new ComplicatedCoinsIDD();
    }

    public ComplicatedCoinsIDD(){
        List<Solution<Object>> solutions = Muli.getAllSolutions(ComplicatedCoinsIDD::searchCoins, SearchStrategy.IterativeDeepening);

        for (Solution<Object> solution : solutions) {
            System.out.println(solution.value);
        }
    }

    private static boolean searchCoins() {
        int coin1 free, coin2 free;

        if (coin1 == 0) {
            if (coin2 == 0) {
                return coin1 == 0 || false;
            } else {
                return false;
            }
        } else {
            if (coin2 == 0) {
                return coin1 == 0 && coin2 == 0;
            } else {
                return coin1 == 0 && true;
            }
        }
    }

}
